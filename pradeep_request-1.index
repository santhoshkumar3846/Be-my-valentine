<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Be My Valentine 💖</title>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,600;9..144,700&family=Space+Grotesk:wght@400;500;600&display=swap");

    :root {
        --bg-1: #ff9bb2;
        --bg-2: #ffc2d1;
        --bg-3: #ffe4c7;
        --ink: #2c1b24;
        --accent: #e91e63;
        --accent-dark: #b3124a;
        --mint: #2bb673;
        --mint-dark: #18925a;
        --shadow: 0 22px 60px rgba(0, 0, 0, 0.2);
        --card: #fffaf6;
        --glass: rgba(255, 255, 255, 0.55);
    }

    body {
        margin: 0;
        min-height: 100vh;
        background:
            radial-gradient(1200px 800px at 10% 10%, rgba(255, 255, 255, 0.6), transparent 60%),
            radial-gradient(900px 600px at 90% 20%, rgba(255, 240, 220, 0.8), transparent 70%),
            linear-gradient(135deg, var(--bg-1), var(--bg-2) 45%, var(--bg-3));
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Space Grotesk", sans-serif;
        overflow: hidden;
    }

    .container {
        text-align: center;
        background: var(--card);
        padding: 34px 28px 80px;
        border-radius: 26px;
        box-shadow: var(--shadow);
        position: relative;
        width: 90%;
        max-width: 420px;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.05);
        animation: popIn 600ms ease-out both;
    }

    .sparkle {
        position: absolute;
        inset: -30px;
        background:
            radial-gradient(20px 20px at 15% 20%, rgba(255, 255, 255, 0.8), transparent 70%),
            radial-gradient(18px 18px at 70% 10%, rgba(255, 255, 255, 0.6), transparent 70%),
            radial-gradient(22px 22px at 85% 50%, rgba(255, 255, 255, 0.7), transparent 70%),
            radial-gradient(16px 16px at 25% 80%, rgba(255, 255, 255, 0.7), transparent 70%);
        opacity: 0.7;
        pointer-events: none;
        animation: shimmer 6s ease-in-out infinite;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 14px;
        border-radius: 999px;
        background: var(--glass);
        color: var(--accent-dark);
        font-weight: 600;
        font-size: 14px;
        letter-spacing: 0.3px;
        border: 1px solid rgba(233, 30, 99, 0.2);
        box-shadow: 0 8px 16px rgba(233, 30, 99, 0.12);
    }

    h1 {
        font-family: "Fraunces", serif;
        color: var(--ink);
        margin: 18px 0 10px;
        font-size: 30px;
        line-height: 1.2;
    }

    p {
        margin: 0 0 26px;
        color: rgba(44, 27, 36, 0.7);
        font-size: 16px;
    }

    .actions {
        position: static;
        height: 0;
    }

    button {
        padding: 12px 26px;
        font-size: 17px;
        border: none;
        border-radius: 999px;
        cursor: pointer;
        position: absolute;
        user-select: none;
        font-weight: 600;
        letter-spacing: 0.3px;
        transition: transform 200ms ease, box-shadow 200ms ease, filter 200ms ease;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.16);
    }

    button:active {
        transform: translateY(2px) scale(0.98);
    }

    #yesBtn {
        background: linear-gradient(135deg, var(--mint), #64e1a8);
        color: white;
        left: 50%;
        transform: translateX(-110%);
        bottom: 0;
    }

    #yesBtn:hover {
        box-shadow: 0 16px 30px rgba(43, 182, 115, 0.35);
        filter: brightness(1.02);
    }

    #noBtn {
        background: linear-gradient(135deg, #ff6b8a, #ff9bb2);
        color: white;
        left: 50%;
        transform: translateX(10%);
        bottom: 0;
        transition: left 700ms ease, top 700ms ease;
        width: 96px;
        height: 44px;
    }

    #noBtn:hover {
        box-shadow: 0 14px 26px rgba(255, 107, 138, 0.35);
        filter: brightness(1.02);
    }

    .success {
        display: none;
        font-size: 20px;
        color: var(--accent);
        margin-top: 16px;
        line-height: 1.4;
    }

    /* Heart animation */
    .heart {
        position: absolute;
        bottom: -20px;
        color: var(--accent);
        font-size: 20px;
        animation: floatUp 4s linear forwards;
        opacity: 0.8;
        pointer-events: none;
    }

    .heart.full {
        position: fixed;
        bottom: -24px;
        z-index: 5;
    }

    .love-message {
        margin-top: 18px;
        font-size: 18px;
        color: rgba(44, 27, 36, 0.85);
    }

    .dinner-scene {
        display: none;
        position: relative;
        width: 260px;
        height: 140px;
        margin: 18px auto 0;
        filter: drop-shadow(0 14px 18px rgba(0, 0, 0, 0.12));
    }

    .dinner-scene.show {
        display: block;
        animation: popIn 600ms ease-out both;
    }

    .table {
        position: absolute;
        left: 50%;
        bottom: 16px;
        transform: translateX(-50%);
        width: 230px;
        height: 18px;
        background: linear-gradient(135deg, #c78a4a, #e3b175);
        border-radius: 10px;
    }

    .table::after {
        content: "";
        position: absolute;
        left: 50%;
        top: 12px;
        transform: translateX(-50%);
        width: 40px;
        height: 40px;
        background: #b0703a;
        border-radius: 0 0 12px 12px;
    }

    .plate {
        position: absolute;
        width: 36px;
        height: 12px;
        border-radius: 999px;
        background: #fff;
        border: 2px solid #f1c995;
        top: -10px;
    }

    .plate.left { left: 40px; }
    .plate.right { right: 40px; }

    .candle {
        position: absolute;
        left: 50%;
        top: -46px;
        transform: translateX(-50%);
        width: 10px;
        height: 30px;
        background: #ffd8a6;
        border-radius: 6px;
        box-shadow: inset 0 -4px 0 rgba(0, 0, 0, 0.08);
    }

    .flame {
        position: absolute;
        left: 50%;
        top: -12px;
        transform: translateX(-50%);
        width: 10px;
        height: 14px;
        background: radial-gradient(circle at 50% 40%, #fff7cf, #ff9f1c);
        border-radius: 50% 50% 50% 50%;
        animation: flicker 1.2s ease-in-out infinite;
    }

    .wine {
        position: absolute;
        width: 12px;
        height: 18px;
        border-radius: 6px 6px 10px 10px;
        background: #ff6b8a;
        top: -24px;
    }

    .wine.left { left: 84px; }
    .wine.right { right: 84px; }

    .diner {
        position: absolute;
        bottom: 44px;
        font-size: 38px;
        filter: drop-shadow(0 6px 10px rgba(0, 0, 0, 0.15));
        animation: dinerFloat 3.6s ease-in-out infinite;
    }

    .diner.male { left: 10px; }
    .diner.female { right: 10px; animation-delay: 0.6s; }

    .diner span {
        display: block;
        font-size: 12px;
        color: rgba(44, 27, 36, 0.7);
        margin-top: 4px;
    }

    .curious-teddy {
        position: absolute;
        right: 16px;
        bottom: 18px;
        font-size: 34px;
        filter: drop-shadow(0 6px 10px rgba(0, 0, 0, 0.15));
        animation: curiousPeek 2.8s ease-in-out infinite;
    }

    .curious-teddy span {
        display: block;
        font-size: 12px;
        color: rgba(44, 27, 36, 0.7);
        margin-top: 2px;
        letter-spacing: 0.2px;
    }

    .ribbon {
        position: absolute;
        top: 18px;
        right: -36px;
        transform: rotate(18deg);
        background: linear-gradient(135deg, #ff6b8a, #ffc2d1);
        color: white;
        padding: 8px 46px;
        font-weight: 600;
        letter-spacing: 0.5px;
        box-shadow: 0 10px 20px rgba(255, 107, 138, 0.35);
    }


    @keyframes floatUp {
        from {
            transform: translateY(0) scale(1);
            opacity: 1;
        }
        to {
            transform: translateY(-500px) scale(1.8);
            opacity: 0;
        }
    }

    @keyframes shimmer {
        0% { opacity: 0.55; }
        50% { opacity: 0.85; }
        100% { opacity: 0.55; }
    }

    @keyframes popIn {
        0% { transform: translateY(20px) scale(0.95); opacity: 0; }
        100% { transform: translateY(0) scale(1); opacity: 1; }
    }

    @keyframes heartPop {
        0%, 100% { transform: scale(0.9); opacity: 0.8; }
        50% { transform: scale(1.2); opacity: 1; }
    }
    @keyframes flicker {
        0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.9; }
        50% { transform: translateX(-50%) scale(1.15); opacity: 1; }
    }

    @keyframes dinerFloat {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-4px); }
    }

    @keyframes curiousPeek {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-4px) rotate(-2deg); }
    }

    @media (max-width: 480px) {
        .container {
            padding: 28px 22px 76px;
        }

        h1 {
            font-size: 26px;
        }

        .dinner-scene {
            transform: scale(0.92);
        }
    }
</style>
</head>

<body>

<div class="container" id="box">
    <div class="sparkle" aria-hidden="true"></div>
    <div class="ribbon">Sweetest</div>
    <div class="badge">💌 Valentine Invite</div>
    <h1 id="questionText"></h1>
    <p id="subText">A tiny yes makes a huge smile.</p>

    <div class="actions">
        <button id="yesBtn">Yes 💖</button>
        <button id="noBtn">No 💔</button>
    </div>

    <div class="dinner-scene" id="dinnerScene" aria-hidden="true">
        <div class="diner male">🧸<span>Her's</span></div>
        <div class="diner female">🐰<span>His</span></div>
        <div class="table">
            <div class="plate left"></div>
            <div class="plate right"></div>
            <div class="wine left"></div>
            <div class="wine right"></div>
            <div class="candle">
                <div class="flame"></div>
            </div>
        </div>
    </div>

    <div class="curious-teddy" aria-hidden="true">🧸<span>Deeepu💕</span></div>

    <div class="success" id="successMsg"></div>
</div>

<script>
    /* =======================
       PERSONALIZE HERE
    ======================== */
    const PERSON_NAME = "Prasastha";
    const SUCCESS_MESSAGE = "You are my favorite person ❤️";

    /* ======================= */

    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const box = document.getElementById("box");
    const successMsg = document.getElementById("successMsg");
    const questionText = document.getElementById("questionText");
    const dinnerScene = document.getElementById("dinnerScene");

    questionText.innerText = `Will you be my Valentine, ${PERSON_NAME}? 💘`;

    function moveNoButton() {
        const boxRect = box.getBoundingClientRect();
        const btnRect = noBtn.getBoundingClientRect();

        const padding = 12;
        const maxX = boxRect.width - btnRect.width - padding;
        const maxY = boxRect.height - btnRect.height - padding;

        const x = Math.random() * maxX + padding / 2;
        const y = Math.random() * maxY + padding / 2;

        noBtn.style.left = x + "px";
        noBtn.style.top = y + "px";
    }

    noBtn.setAttribute("aria-disabled", "true");

    noBtn.addEventListener("mouseenter", moveNoButton);
    noBtn.addEventListener("touchstart", moveNoButton);
    noBtn.addEventListener("click", (event) => {
        event.preventDefault();
        moveNoButton();
    });

    function createHeart(target, fullPage = false) {
        const heart = document.createElement("div");
        heart.className = fullPage ? "heart full" : "heart";
        heart.innerText = "❤️";
        heart.style.left = Math.random() * 100 + "%";
        heart.style.fontSize = (16 + Math.random() * 20) + "px";

        target.appendChild(heart);

        setTimeout(() => {
            heart.remove();
        }, 4000);
    }

    yesBtn.addEventListener("click", () => {
        yesBtn.style.display = "none";
        noBtn.style.display = "none";
        dinnerScene.classList.add("show");

        successMsg.innerHTML = `
            Yay ${PERSON_NAME}! 💕<br>
            ${SUCCESS_MESSAGE}<br>
            <span class="love-message">You just turned today into a little celebration of us.</span><br>
            <span class="love-message">💕 Your's Deeepu💕</span>
        `;

        // Start heart rain
        const fullHeartBurst = setInterval(() => createHeart(document.body, true), 90);
        setTimeout(() => {
            clearInterval(fullHeartBurst);
            successMsg.style.display = "block";
        }, 2000);
    });
</script>

</body>
</html>
